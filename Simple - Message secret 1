
#Simple - Message secret 1 (rotate message)

def rotate():

    secretMessage = ((input("Enter secret message:")).lower()).split()
    boxWidth = int(input("Enter box width: "))
    leftOrRight = input("Rotate 90 degrees right or left (type 'right' or 'left')? ")
    #boxWidth = 3

    result = ""
    #print("Secret message")
    #print(secretMessage)

    #create grid for ONE word
    for word in secretMessage:

        #lengthWord = len(word)
        #numOfRows = int(lengthWord / boxWidth)

        grid = []
        counter = 0

        for letter in word:

            if counter == 0:
                list = []
            elif counter == boxWidth:
                grid.append(list)
                counter = 0
                list = []


            list.append(letter)
            counter = counter + 1

        #print the grid
        '''print("Grid =")
        print(grid)'''

        #rotate 90 degrees left or right
        if (leftOrRight == 'left'):
            #print("left")

            for secondList in grid:
                result = result + secondList[boxWidth-1]

        elif (leftOrRight == 'right'):
            #print("right")

            for secondList in grid:
                result = result + secondList[0]

        else:
            print("incorrect command")

        result = result + " "

    print("Decrypted message: " + result)







###############################################
rotate()
